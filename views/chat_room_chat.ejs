            var roomId = $('#roomIdInput').val();
            var output = {
                command:'join',
                roomId:roomId
            };
            socket.emit('room', output);
        }
        function leaveRoom(){
            var roomId = $('#roomIdInput').val();
            var output = {
                command:'leave',
                roomId:roomId
