            var id = $('#idInput').val();
            var output = {
                command:'create',
                roomId:roomId,
                roomName:roomName,
                roomOwnoer:id
            };
            socket.emit('room', output);
        }
        function updateRoom(){
            var roomId = $('#roomIdInput').val();
            var roomName = $('#roomNameInput').val();
            var id = $('#idInput').val();
            var output = {
                command:'update',
                roomId:roomId,
                roomName:roomName,
