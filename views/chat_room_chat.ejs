    <script>

        function createRoom(){
            var roomId = $('#roomIdInput').val();
            var roomName = $('#roomNameInput').val();
            var id = $('#idInput').val();
            var output = {
                command:'create',
                roomId:roomId,
                roomName:roomName,
                roomOwnoer:id
            };
            socket.emit('room', output);
        }
        function updateRoom(){
            var roomId = $('#roomIdInput').val();
            var roomName = $('#roomNameInput').val();
            var id = $('#idInput').val();
            var output = {
                command:'update',
                roomId:roomId,
                roomName:roomName,
                roomOwnoer:id
            };
            socket.emit('room', output);
        }
        function deleteRoom(){
            var roomId = $('#roomIdInput').val();
            var id = $('#idInput').val();
            var output = {
                command:'delete',
                roomId:roomId,
                roomName:'',
                roomOwnoer:id
            };
            socket.emit('room', output);
        }
        function joinRoom(){
            var roomId = $('#roomIdInput').val();
            var output = {
                command:'join',
                roomId:roomId
            };
            socket.emit('room', output);
        }
        function leaveRoom(){
            var roomId = $('#roomIdInput').val();
            var output = {
                command:'leave',
                roomId:roomId
            };
            socket.emit('room', output);
        }
        function println(data){      //상태 프린트
            console.log(data);
            $('#results').append('<p>' + data + '</p>');
        }

