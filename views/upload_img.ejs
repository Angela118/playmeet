<script type="text/javascript">
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#profile_img').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#new_profile_img").change(function() {
        readURL(this);
    });
</script>
    <style>
        .navbar {
            width: 360px;
        }
    </style>
   
</head>

<body class="coloring">
<% include ./navbar %>
<div class="container">    

      <form class="" enctype="multipart/form-data" action="/uploadimg" method="post">
		  <div class="col-md-8 order-md-1">
         
         
              <p class="mb-3"></p>
            <p>프로필 사진 등록</p> <!--프로필 사진-->
            <div class="profile_img_upload">
                <div class="img_div mb-1"><img id="profile_img" src="../profile_img/<%= profile_img %>"></div>
                <div class="filebox">
                    <label for="new_profile_img" style="background-color:#7473ff; color:white; border:none;">업로드</label>
                    <input type="file" name="photo" id="new_profile_img" accept="image/*" capture="filesystem">
                </div>
            </div>
         </div>
      
            <hr class="mb-4">

         <a href="/"><button class="btn btn-block" type="submit" style="color:white; text-align:center; margin-left:Auto;margin-right:auto;margin-top:2rem; background-color:#7473ff;">확인</button></a>
      </form>
    </div>
</body>
